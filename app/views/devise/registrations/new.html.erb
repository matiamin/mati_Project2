<fieldset>
  <div class ="signup">
    <h2>Sign up</h2>
    <br />

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, :placeholder => "Email", :size => "27" %>
    </div>
    <br />

    <div class="field">
      <%= f.text_field :first_name, :placeholder => "First Name", :size => "27" %>
    </div>
    <br />

    <div class="field">
      <%= f.text_field :last_name, :placeholder => "Last Name", :size => "27" %>
    </div>
    <br />

    <div class="field">
      <%= f.text_field :nickname, :placeholder => "Nickname", :size => "27" %>
    </div>
    <br />

    <div class="field">
      <%= f.text_area :about, :placeholder => "About Me", :size => "27" %>
    </div>
    <br />

    <div class="field">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :placeholder => "Password", :size => "27"%>
    </div>
    <br />

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => "Password Confirmation", :size => "27"%>
    </div>
    <br />

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
    <% end %>
    <br />

    <%= render "devise/shared/links" %>
  </div>

</fieldset>
