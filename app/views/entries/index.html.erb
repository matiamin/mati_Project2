<div class = "container">
  <h2 class = "heading">Scholarships</h2>

  <button type="button" class="btn btn-default"><%= link_to 'New Entry', new_entry_path%></button>

  <table class = "categoies">
    <tr>
      <% @categories.each do |category| %>
      <ul>
        <%= link_to category.name, entries_path(filter: {category_id: category}) %>
      </ul>
      <% end %>
    </tr>
  </table>

  <table class = "title">
    <tr>
      <th>Title</th>
      <th>Deadline</th>
      <th>Institute</th>
      <th>Country</th>
      <th>Website</th>
      <th>Description</th>
    </tr>
  </table>

  <table class = "entries">

    <tr>
      <!-- each entry should have it's own row, so this line below should be
          ABOVE the TR row -->
      <% @entries.each do |entry|%>
      <td><%=entry.title%></td>
      <td><%=entry.deadline%></td>
      <td><%=entry.institute%></td>
      <td><%=entry.country%></td>
      <td><a href="<%=entry.website %>"> Link </a></td>
      <td><%=entry.description%></td>

      <!-- the number of cells (8) doesn't match the number of header cells, which
          is why your layout looks broken for the index page  -->
      <td><%= link_to 'View', entry_path(entry)%></td>

      <td><% if can? :edit, entry %>
        <td><%= link_to 'Edit', edit_entry_path(entry)%></td>
        <%end%>
      </td>

      <td><% if can? :destroy, entry %>
        <td><%= link_to 'Delete', entry_path(entry),
        method: :delete %>
        <% end%>
      </td>
    </tr>

    <tr class = "author">
      <td>
        <%= entry.created_at.strftime("%B, %d, %Y") %> <br />
        <%=link_to entry.user.first_name, user_path(entry.user)%>
      </td>
    </tr>

    <%end%>
  </table>
</div>

<div class ="paginate"><%= will_paginate @entries, renderer: BootstrapPagination::Rails %></div>
