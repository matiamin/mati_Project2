<h1>New Entry</h1>
<%= form_for :entry, url: entries_path do |f|%>

<p>
  <%= f.label :title%> <br>
  <%= f.text_field :text%>
</p>

<p>
  <%= f.label :deadline%> <br>
  <%= f.date_field :date%>
</p>

<p>
  <%= f.label :Institute%> <br>
  <%= f.text_field :text%>
</p>

<p>
<%= f.label :link%> <br>
<%= f.text_field :string%>
</p>

