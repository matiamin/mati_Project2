<div class = "entry">
<%= form_for @entry do |f|%>

<% if @entry.errors.any? %>
<div id="error_explanation">

  <ul>
    <% @entry.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
    <% end %>
  </ul>
</div>
<% end %>

<p><%= f.collection_select :category_id, Category.all, :id, :name %></p>
<br />

<div class = "form">

  <div class = title>
    <%= f.label :Title%> <br>
    <%= f.text_field :title, :placeholder => "Title"%>
  </div>
  <br />

  <div class= institute>
    <%= f.label :Institute%> <br>
    <%= f.text_field :institute, :placeholder => "Institute"%>
  </div>
  <br />

  <div class= website>
    <%= f.label :Link%> <br>
    <%= f.url_field :website, :placeholder => "Link"%>
  </div>
  <br />

  <!-- #The drop-down option for selecting country -->
  <div class= country>
    <%= f.label :Country%> <br>
    <%= f.country_select :country, {priority: %w(US CA), prompt: 'Select Country'}%>
  </div>
  <br />

  <div class= description>
    <%= f.label :Description%> <br>
    <%= f.text_area :description, :placeholder => "Description"%>
  </div>
  <br />

  <div class= deadline>
    <%= f.label :deadline%> <br>
    <%= f.date_field :deadline, :value => "deadline"%>
  </div>
  <br />

</div>

<p>
  <%=f.submit%>
</p>

<%end%>
</div>
