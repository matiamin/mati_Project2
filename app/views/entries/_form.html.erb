<%= form_for @entry do |f|%>

<% if @entry.errors.any? %>
    <div id="error_explanation">

      <ul>
        <% @entry.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      </ul>
    </div>
  <% end %>

 <p><%= f.collection_select :category_id, Category.all, :id, :name %></p>

<p>
  <%= f.label :title%> <br>
  <%= f.text_field :title%>
</p>

<p>
  <%= f.label :deadline%> <br>
  <%= f.date_field :deadline%>
</p>

<p>
  <%= f.label :Institute%> <br>
  <%= f.text_field :institute%>
</p>

<p>
<%= f.label :website%> <br>
<%= f.text_field :website%>
</p>

<!-- #The drop-down option for selecting country -->
<p>
  <%= f.label :country%> <br>
  <%= f.country_select :country, {priority: %w(US CA), prompt: 'Select Country'}%>
</p>

<p>
  <%= f.label :description%> <br>
  <%= f.text_area :description%>
</p>

<p>
  <%=f.submit%>
</p>

<%end%>
